Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/bionic64"

  # config.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1"
  config.vm.network "private_network", ip: "192.168.10.10"

  # config.vm.synced_folder "../data", "/vagrant_data"

  config.vm.provider "virtualbox" do |vb|
  #   # Display the VirtualBox GUI when booting the machine
  #   vb.gui = true
  #
    # Customize the amount of memory on the VM:
    vb.memory = "4096"
    vb.cpus = 4
  end

  
  # config.vm.provision "shell", inline: <<-SHELL
  #   apt-get update
  #   apt-get install -y nginx
  # SHELL
  
  config.vm.provision "docker" do |d|
    d.pull_images "justayce/snort"
    d.pull_images "justayce/elk"
    # d.pull_images "vyos/vyos-build:current"
    d.run "justayce/snort"
    d.run "justayce/elk"
  end

  # config.vm.define "web", primary: true do |web|
  #   web.vm.network "private_network", ip: "192.168.10.100"
  #   web.vm.network "forwarded_port", guest: 80, host: 8080, id: "nginx"
  #   web.vm.provision "shell", inline: <<-SHELL
  #     sudo apt-get install -y nginx
  #     sudo systemctl enable nginx
  #     sudo systemctl start nginx
  # SHELL
  # end
end
